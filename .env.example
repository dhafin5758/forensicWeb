# Environment Configuration for Forensics Platform
# Copy this file to .env and update with your values

# ============================================================================
# Application Settings
# ============================================================================
DEBUG=false
ENVIRONMENT=production
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_32_CHARS

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
ALLOWED_ORIGINS=["http://localhost:3000","https://yourdomain.com"]

# ============================================================================
# Storage Configuration
# ============================================================================
STORAGE_ROOT=/var/forensics
MAX_UPLOAD_SIZE_GB=20

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=postgresql+asyncpg://forensics:CHANGE_THIS_PASSWORD@localhost/forensics_db

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ============================================================================
# Celery Worker Configuration
# ============================================================================
CELERY_WORKER_CONCURRENCY=2

# ============================================================================
# Tool Paths (Linux)
# ============================================================================
VOL3_PATH=/usr/local/bin/vol
BINWALK_PATH=/usr/bin/binwalk
EXIFTOOL_PATH=/usr/bin/exiftool

# ============================================================================
# Process Isolation
# ============================================================================
USE_DOCKER_ISOLATION=true

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
